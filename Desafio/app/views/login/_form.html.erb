<%= form_tag login_path do  %>
      <div class="form-group has-feedback">
        <%= text_field_tag :login, "", :class => "form-control", :placeholder => "Digite seu login" %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
      <%= password_field_tag :password, "", :class => "form-control", :placeholder => "Digite sua senha" %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>


      <div class="row">
        <div class="col-xs-4">
          <%= submit_tag "Logar", :class => "btn btn-primary btn-block btn-flat"%>
        </div>
      </div>

<% end %>
