<header class="main-header">
  <!-- Logo -->
  <%= link_to mercadorias_path, :class => "logo" do %> 
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">Desafio ValeMOBI</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">Desafio ValeMOBI
    </span>
    <% end %>
  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
      <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <!-- The user image in the navbar-->
        <%= image_tag "avatar", :class => "user-image" %>
              <!-- hidden-xs hides the username on small devices so only the image appears. -->
              <span class="hidden-xs"><%= current_user.nome %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- The user image in the menu -->
              <li class="user-header">
                      <%= image_tag "avatar", :class => "img-circle" %>


                <p>
                  <%= current_user.nome %>
                  <small>Vendedor</small>

                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <div class="row">
                  <div class="col-xs-12 text-center">
                      <%= Mercadoria.all.size %>
                     mercadorias cadastradas 
                  </div>

                </div>
                  
                  
                <!-- /.row -->
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">

                <div class="pull-right">
                 <%= link_to login_path, method: :delete do %>
                  <button class="btn btn-default btn-flat">Deslogar</button>
                  <% end %>
                </div>
              </li>
            </ul>
          </li>
        <li>
        </li>
      </ul>
    </div>
  </nav>
</header>